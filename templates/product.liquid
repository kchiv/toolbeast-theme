<style type="text/css">
	.product-header-bottom-line {
		border-bottom: 1px solid;
	}

	.product-h1 {
		text-transform: uppercase;
		font-weight: bold;
		font-size: 25px;
	}

	.pd-page-price {
		font-size: 18px;
	}

	.pd-pg-write-review a {
		color: #737373;
		-webkit-transition: color .2s linear;
		-moz-transition: color .2s linear;
		-ms-transition: color .2s linear;
		-o-transition: color .2s linear;
		transition: color .2s linear;
	}

	.pd-pg-write-review a:hover {
		color: #343A40;
		text-decoration: none;
	}
</style>

{% include 'breadcrumbs' %}

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="product-header-bottom-line">
				<h1 class="tb-h-underline product-h1 mb-0">{{ product.title }}</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<h6 class="mt-2">{{ product.vendor }}</h6>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8">
			<img class="img-fluid" src="{{ product.featured_image.src | img_url: '500x500', crop: 'center' }}">
		</div>
		<div class="col-md-4">
			<div class="row">
				<div class="col-md-12">
					{% include 'product-single-price' %}
				</div>
				<div class="col-md-12">
					<div class="pd-pg-ratings">
						<div class="d-inline-block">
							<span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
						</div>
						<div class="d-inline-block">
							<span class="pd-pg-write-review"><a href="">Write a Review</a></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		{{ product.description }}
		<form action="/cart/add" method="post" enctype="multipart/form-data">
			<select name="id">
				{% for variant in product.variants %}
					{% if variant.available == true %}
						<option value="{{variant.id}}"> {{ variant.title }} for {{ variant.price | money_with_currency }}</option>
					{% else %}
						<option disabled="disabled"> {{ variant.title }} - sold out!</option>
					{% endif %}
				{% endfor %}
			</select>
			<input type="submit" name="add" id="add" value="Add to Cart" class="button">
		</form>
	</div>
</div>