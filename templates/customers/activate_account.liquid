{% include 'breadcrumbs' %}

<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h1 class="tb-h-underline">Activate Account</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-md-12 mt-4">

      {% form 'activate_customer_password' %}

      {{ form.errors | default_errors }}

      <div class="form-group">
        <input type="password" value="" name="customer[password]" size="30" placeholder="Password" class="form-control" required />
      </div>

      <div class="form-group">
        <input type="password" value="" name="customer[password_confirmation]" size="30" placeholder="Confirm Password" class="form-control" required />
      </div>

      <div class="form-group">
        <input class="btn btn-primary tb-button" type="submit" value="Activate Account" />
      </div>

      {% endform %}

    </div>
  </div>

</div>