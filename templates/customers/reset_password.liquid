{% include 'breadcrumbs' %}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <h1 class="tb-h-underline">Reset Password</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-6 col-md-12 mt-4">

            <p>Enter a new password</p>

            {% form 'reset_customer_password' %}

            {{ form.errors | default_errors }}

            <div class="form-group">
                <input type="password" value="" name="customer[password]" size="30" placeholder="Password" class="form-control" required />
            </div>

            <div class="form-group">
                <input type="password" value="" name="customer[password_confirmation]" size="30" placeholder="Password Confirmation" class="form-control" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary tb-button" />
            </div>

            {% endform %}

        </div>

    </div>

</div>