{% include 'breadcrumbs' %}

<div class="container">
    <div class="row">
      <div class="col-xl-12">
        <h1>{{ page.title }}</h1>
      </div>
    </div>
</div>

<div class="container">
    <div class="row">
      <div class="col-xl-6 contact-form">
        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <p>Thank you for contacting us!</p>
          {% else %}
            {{ form.errors | default_errors }}
          {% endif %}
          <div class="form-group">
            <select class="form-control" name="contact[reason]">
              <option value="" disabled selected>Select Reason</option>
              <option>Order Status</option>
              <option>Return</option>
              <option>Product Information</option>
              <option>Company Information</option>
              <option>Feedback</option>
              <option>Mailing Lists</option>
              <option>Other</option>
            </select>
          </div>
          <div class="form-group">
            <input type="name" name="contact[name]" class="form-control" placeholder="Name">
          </div>
          <div class="form-group">
            <input type="email" name="contact[email]" class="form-control" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="order" name="contact[order]" class="form-control" placeholder="Order Number (Optional)">
          </div>
          <div class="form-group">
            <input type="subject" name="contact[subject]" class="form-control" placeholder="Subject">
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="5" placeholder="Message" name="contact[message]"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-primary tb-button" value="Submit">
          </div>
        {% endform %}
      </div>
      <div class="col-xl-6">
        {% if settings.contact_phone != blank %}
          <div><i class="fas fa-phone"></i> {{ settings.contact_phone }}</div>
        {% endif %}
        {% if settings.contact_mailing != blank %}
          <div><i class="fas fa-envelope"></i> {{ settings.contact_mailing }}</div>
        {% endif %}
          <div>
            <span>Follow Us:</span>
            <span><i class="fab fa-facebook"></i></span>
            <span><i class="fab fa-instagram"></i></span>
            <span><i class="fab fa-twitter"></i></span>
            <span><i class="fab fa-pinterest"></i></span>
          </div>
      </div>
    </div>
</div>



