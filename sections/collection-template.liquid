<style type="text/css">
  .collection-promo-banner {
    background-color: #343A40;
    color: #D8D8D8;
    font-size: 14px;
    padding-bottom: 5px;
    padding-top: 5px;
  }
</style>

{% if section.settings.collection_promo_enable %}
<div class="collection-promo-banner">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <span>{{ section.settings.collection_promo_text }}</span>
      </div>
    </div>
  </div>
</div>
{% endif %}

{% include 'breadcrumbs' %}
{% paginate collection.products by 12 %}

<div class="container">
  <div class="row">

    <div class="col-md-9 order-1 order-md-9">
      <div class="row solid-bottom-line">
        <h1 class="tb-h-underline cat-header">{{ collection.title }}</h1>
      </div>
      {% if section.settings.collection_sort_enable %}
        <div class="row">
          <div class="col-md-12 form-inline justify-content-end collection-sort">
            <div id="sort-by-container" class="form-group">
              <label for="sort-by">Sort by</label> 
              <select id="sort-by" class="form-control-sm">
                <option value="manual">Featured</option>
                <option value="price-ascending">Price: Low to High</option>
                <option value="price-descending">Price: High to Low</option>
                <option value="title-ascending">A-Z</option>
                <option value="title-descending">Z-A</option>
                <option value="created-ascending">Oldest to Newest</option>
                <option value="created-descending">Newest to Oldest</option>
                <option value="best-selling">Best Selling</option>
              </select>
            </div>
          </div>
        </div>
      {% endif %}
      <div class="row">
        {% for product in collection.products %}
          <div class="col-md-4">
            {% include 'product-grid-item' %}
          </div>
        {% endfor %}
      </div>
      {% if paginate.pages > 1 %}
        {% include 'pagination' %}
      {% endif %}
    </div>

    <div class="col-md-3 order-2">
      <div class="row">
        <div class="col-md-12">
          {% include 'collection-sidebar' %}
        </div>
      </div>
    </div>

  </div>
</div>

{% endpaginate %}


{% schema %}
{
  "name": "Collection pages",
  "settings": [
    {
      "type": "checkbox",
      "id": "collection_sort_enable",
      "label": "Enable Collection Sorting",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "collection_promo_enable",
      "label": "Enable Promo Banner"
    },
    {
      "type": "text",
      "id": "collection_promo_text",
      "label": "Promo Banner Text"
    },
    {
      "type": "link_list",
      "id": "cat_sidebar_linklist",
      "label": "Category Links",
      "default": "main-menu"
    }
  ]
}
{% endschema %}