<style type="text/css">
  .collection-promo-banner {
    background-color: #343A40;
    color: #D8D8D8;
    font-size: 14px;
    padding-bottom: 5px;
    padding-top: 5px;
  }
</style>

{% if section.settings.collection_promo_enable %}
<div class="collection-promo-banner">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <span>{{ section.settings.collection_promo_text }}</span>
      </div>
    </div>
  </div>
</div>
{% endif %}

{% include 'breadcrumbs' %}
{% paginate collection.products by 12 %}

<div class="container">
  <div class="row">

    <div class="col-md-9 order-1 order-md-9">
      {% include 'collection-product-grid' %}
    </div>

    <div class="col-md-3 order-2">
      {% include 'collection-sidebar' %}
    </div>

  </div>
</div>

{% endpaginate %}


{% schema %}
{
  "name": "Collection pages",
  "settings": [
    {
      "type": "checkbox",
      "id": "collection_sort_enable",
      "label": "Enable Collection Sorting",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "collection_promo_enable",
      "label": "Enable Promo Banner"
    },
    {
      "type": "text",
      "id": "collection_promo_text",
      "label": "Promo Banner Text"
    },
    {
      "type": "link_list",
      "id": "cat_sidebar_linklist",
      "label": "Category Links",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "collection_featured_post_enable",
      "label": "Enable Featured Blog Posts",
      "default": true
    },
    {
      "type": "url",
      "id": "cat_sidebar_blog_link",
      "label": "Category Sidebar Blog Link"
    }
  ]
}
{% endschema %}