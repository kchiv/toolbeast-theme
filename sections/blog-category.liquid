{% paginate blog.articles by 10 %}
<div class="blog-cat-background">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 text-center">
				<h1 class="blog-category-header">{{ blog.title }}</h1>
			</div>
		</div>
	</div>
	<div class="container">
		{% include 'blog-category-featured' %}
		<div class="row">
			{% include 'blog-category-list' %}
			{% include 'blog-category-sidebar' %}
		</div>
	</div>
</div>

{% endpaginate %}


{% schema %}
{
  "name": "Blog Category Pages",
  "settings": [
    {
      "type": "link_list",
      "id": "blog_cat_sidebar_linklist",
      "label": "Blog Category Links",
      "default": "main-menu"
    }
  ]
}
{% endschema %}