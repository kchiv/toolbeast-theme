<div class="container">
  <div class="row">
    <div class="col-md-8 mt-4 faq-accordion">
      <div id="accordion">
        {% for block in section.blocks %}
          <div class="card">
            <div class="card-header" id="heading{{ forloop.index }}">
              <h5 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse{{ forloop.index }}" aria-expanded="true" aria-controls="collapse{{ forloop.index }}">
                  <i class="fa pr-2" aria-hidden="true"></i>{{ block.settings.title }}
                </button>
              </h5>
            </div>
            <div id="collapse{{ forloop.index }}" class="collapse" aria-labelledby="heading{{ forloop.index }}" data-parent="#accordion">
              <div class="card-body">
                {{ block.settings.description_faq }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="col-md-4 mt-4 faq-sidebar">
      <h3 class="faq-sidebar-h3">Still have questions?</h3>
      <h5 class="faq-sidebar-h5"><span class="tb-h-underline"><a href="{{ pages[section.settings.faq_contact_us_link].url }}">Contact Us</a></span> and our support team will get back to you.</h5>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "FAQ List",
  "blocks": [
    {
      "type": "select",
      "name": "FAQ",
      "settings": [
        {
          "type": "textarea",
          "id": "title",
          "label": "FAQ Title"
        },
        {
          "type": "textarea",
          "id": "description_faq",
          "label": "FAQ Description"
        }
      ]
    }
  ],
  "name": "FAQ Links",
  "settings": [
    {
      "type": "page",
      "id": "faq_contact_us_link",
      "label": "Contact Us Link"
    }
  ]
}
{% endschema %}