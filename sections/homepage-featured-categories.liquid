	  {
	    "type": "image_picker",
	    "id": "hp_cat_img_1",
	    "label": "Home Category Image 1"
	  },
	  {
	    "type": "text",
	    "id": "hp_cat_text_1",
	    "label": "Home Category Text 1"
	  },
	  {
