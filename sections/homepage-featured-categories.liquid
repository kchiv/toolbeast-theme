<style type="text/css">
.hp-category-img {
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	height: 220px;
}

.hp-category-img-1 {
	background-image: url({{ section.settings.hp_cat_img_1 | img_url: '1000x' }});
}

.hp-category-img-2 {
	background-image: url({{ section.settings.hp_cat_img_2 | img_url: '1000x' }});
}

.hp-category-img-3 {
	background-image: url({{ section.settings.hp_cat_img_3 | img_url: '1000x' }});
}
</style>



<!-- shop by category -->
<div class="container">
	<div class="row justify-content-center">
	  <h3 class="hp-h3">{{ section.settings.hp_cat_header }}</h3>
	</div>
	<div class="row">
	  <div class="col-md-4">
	  	<a href="{{ section.settings.hp_cat_url_1 }}">
			<div class="hp-category-img-1 hp-category-img">
				<div class="hp-cat-back">
					<h4 class="hp-cat-text">{{ section.settings.hp_cat_text_1 }}</h4>
				</div>
			</div>
		</a>
	  </div>
	  <div class="col-md-4 hp-category-img">
	  	<a href="{{ section.settings.hp_cat_url_2 }}">
			<div class="hp-category-img-2 hp-category-img">
				<div class="hp-cat-back">
					<h4 class="hp-cat-text">{{ section.settings.hp_cat_text_2 }}</h4>
				</div>
			</div>
		</a>
	  </div>
	  <div class="col-md-4">
	  	<a href="{{ section.settings.hp_cat_url_3 }}">
			<div class="hp-category-img-3 hp-category-img">
				<div class="hp-cat-back">
					<h4 class="hp-cat-text">{{ section.settings.hp_cat_text_3 }}</h4>
				</div>
			</div>
		</a>
	  </div>
	</div>
</div>

