<style type="text/css">
.hp-category-img {
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	height: 220px;
}

.hp-cat-back {
	height: 220px;
}



img {
    display: block;
}

.thumbnail {
    position: relative;
    display: inline-block;
}

.caption {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate( -50%, -50% );
    text-align: center;
    color: white;
    font-weight: bold;
}
</style>


<!-- shop by category -->
<div class="container">
	<div class="row justify-content-center">
	  <h3 class="hp-h3">{{ section.settings.hp_cat_header }}</h3>
	</div>
	<div class="row">
      <div class="col-md-4 thumbnail">
      	<a href="{{ section.settings.hp_cat_url_1 }}">
          <img class="img-fluid" src="{{ section.settings.hp_cat_img_1 | img_url: '500x500', crop: 'center' }}" alt="">
          <div class="caption">
              <h4 class="hp-cat-text">{{ section.settings.hp_cat_text_1 }}</h4>
          </div>
        </a>
      </div>
      <div class="col-md-4 thumbnail">
      	<a href="{{ section.settings.hp_cat_url_2 }}">
          <img class="img-fluid" src="{{ section.settings.hp_cat_img_2 | img_url: '500x500', crop: 'center' }}" alt="">
          <div class="caption">
              <h4 class="hp-cat-text">{{ section.settings.hp_cat_text_2 }}</h4>
          </div>
        </a>
      </div>
      <div class="col-md-4 thumbnail">
      	<a href="{{ section.settings.hp_cat_url_3 }}">
          <img class="img-fluid" src="{{ section.settings.hp_cat_img_3 | img_url: '500x500', crop: 'center' }}" alt="">
          <div class="caption">
              <h4 class="hp-cat-text">{{ section.settings.hp_cat_text_3 }}</h4>
          </div>
        </a>
      </div>
    </div>
</div>

