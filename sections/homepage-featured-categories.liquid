<style type="text/css">

.hp-category-block {
	padding-top: 10px;
}

.hp-category-img {
    position: relative;
    display: inline-block;
}

/*experiment*/

.hp-category-img:after, .hp-category-img:before {
    position:absolute;
    opacity:0;
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
}

.hp-category-img:after {
    content:'\A';
    width:100%; height:100%;
    top:0; left:0;
    background:rgba(0,0,0,0.6);
}

.hp-category-img:hover:after, .hp-category-img:hover:before {
    opacity:1;
}

/*end experiment*/

.hp-category-img img {
    display: block;
}

.hp-category-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate( -50%, -50% );
    text-align: center;
    color: white;
    font-weight: bold;
}

/*.hp-category-img:hover img {
