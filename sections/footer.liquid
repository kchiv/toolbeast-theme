<footer>
	<div class="footer-social">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<span class="footer-follow">Follow Us</span>
					<span class="hvr-icon-fade"><a href="{{ settings.facebook_link }}"><i class="fab fa-facebook hvr-icon"></i></a></span>
					<span class="hvr-icon-fade"><a href="{{ settings.instagram_link }}"><i class="fab fa-instagram hvr-icon"></i></a></span>
					<span class="hvr-icon-fade"><a href="{{ settings.twitter_link }}"><i class="fab fa-twitter hvr-icon"></i></a></span>
					<span class="hvr-icon-fade"><a href="{{ settings.pinterest_link }}"><i class="fab fa-pinterest hvr-icon"></i></a></span>
				</div>
			</div>
		</div>
	</div>
	<div class="footer-main">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-6 col-sm-6">
					<h5 class="tb-h-underline-fff">{{ section.settings.footer_header_1 }}</h5>
					<ul class="footer-linklist">
						{% for link in linklists[section.settings.footer_linklist_1].links %}
							<li><a href="{{ link.url }}">{{ link.title }}</a></li>
						{% endfor %}
						{% if customer %}
							<li><a href="/account/logout">Sign Out</a></li>
						{% else %}
							<li><a href="/account/login">Sign In</a></li>
						{% endif %}
					</ul>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-6">
					<h5 class="tb-h-underline-fff">{{ section.settings.footer_header_2 }}</h5>
					<ul class="footer-linklist">
						{% for link in linklists[section.settings.footer_linklist_2].links %}
							<li><a href="{{ link.url }}">{{ link.title }}</a></li>
						{% endfor %}
					</ul>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-6">
					<h5 class="tb-h-underline-fff">{{ section.settings.footer_header_3 }}</h5>
					<ul class="footer-linklist">
						{% for link in linklists[section.settings.footer_linklist_3].links %}
							<li><a href="{{ link.url }}">{{ link.title }}</a></li>
						{% endfor %}
					</ul>
				</div>
				<div class="col-lg-3 col-md-6 col-sm-6 my-auto footer-email">
					<div class="footer-email-cta">
						<span>{{ section.settings.footer_email_cap }}</span>
					</div>
					<!-- Begin Mailchimp Signup Form -->
					<div id="mc_embed_signup">
					<form action="https://toolbeast.us11.list-manage.com/subscribe/post?u=43e55b06e3467e3910b627952&amp;id=1c2365574a" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
					    <div id="mc_embed_signup_scroll" class="form-group">
						
							<div class="mc-field-group">
								<input type="email" value="" name="EMAIL" class="required email form-control" id="mce-EMAIL" placeholder="EMAIL ADDRESS">
							</div>
							<div id="mce-responses" class="clear">
								<div class="response" id="mce-error-response" style="display:none"></div>
								<div class="response" id="mce-success-response" style="display:none"></div>
							</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
						    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_43e55b06e3467e3910b627952_1c2365574a" tabindex="-1" value=""></div>
						    <div class="clear">
						    	<input type="submit" value="Sign Up" name="subscribe" id="mc-embedded-subscribe" class="button btn btn-primary tb-button mt-3">
						    </div>
					    </div>
					</form>
					</div>
					<!--End mc_embed_signup-->
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-lg-right text-md-left text-sm-center mt-4">
					<div class="payment-options">
						<i class="fab fa-cc-paypal"></i>
						<i class="fab fa-cc-visa"></i>
						<i class="fab fa-cc-mastercard"></i>
						<i class="fab fa-cc-amex"></i>
						<i class="fab fa-cc-discover"></i>
						<i class="fab fa-cc-jcb"></i>
						<i class="fab fa-cc-diners-club"></i>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-center tb-copyright">
					<span>Copyright Â© {{ "now" | date: "%Y" }} Tool Beast</span>
				</div>
			</div>
		</div>
	</div>
</footer>


{% schema %}
{
	"name": "Footer",
	"settings": [
	  {
	    "type": "text",
	    "id": "footer_header_1",
	    "label": "Footer Header 1"
	  },
	  {
	    "type": "link_list",
        "id": "footer_linklist_1",
        "label": "Footer Linklist 1"
	  },
	  {
	    "type": "text",
	    "id": "footer_header_2",
	    "label": "Footer Header 2"
	  },
	  {
	    "type": "link_list",
        "id": "footer_linklist_2",
        "label": "Footer Linklist 2"
	  },
	  {
	    "type": "text",
	    "id": "footer_header_3",
	    "label": "Footer Header 3"
	  },
	  {
	    "type": "link_list",
        "id": "footer_linklist_3",
        "label": "Footer Linklist 3"
	  },
	  {
	    "type": "text",
	    "id": "footer_email_cap",
	    "label": "Footer Email Text"
	  }
	]
}
{% endschema %}