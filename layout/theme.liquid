  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {% if template == 'index' %}
      <title>{{ shop.name }} | {{ page_title }}</title>
    {% elsif template == 'product' %}
      {% if product.vendor != 'Caiman' %}
        {% if product.variants[0].sku == product.variants[1].sku %}
          <title>{{ product.title }} {{ product.selected_or_first_available_variant.sku }} | {{ product.vendor }}</title>
        {% else %}
          <title>{{ product.title }}{% for vari in product.variants %}{% if forloop.last == true %} {{ vari.sku }}{% else %} {{ vari.sku }},{% endif %}{% endfor %} | {{ product.vendor }}</title>
        {% endif %}
      {% else %}
        <title>{{ product.vendor }} {{ product.title }} {% assign caiman_sku = product.selected_or_first_available_variant.sku | split: '-' %}{{ caiman_sku[0] }} | {{ shop.name }}</title>
      {% endif %}
    {% elsif template == '404' %}
      <title>Page Not Found | {{ shop.name }}</title>
    {% else %}
      <title>{{ page_title }} | {{ shop.name }}</title>
    {% endif %}

    {% if page_description %}
      <meta name="description" content="{{ page_description }}" />
    {% endif %}

    {% if current_tags %}
      <meta name="robots" content="noindex">
    {% endif %}

